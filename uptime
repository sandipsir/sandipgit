--- #Uptime info
 - name: finding uptime and free ram
   hosts: all
   tasks:
    - 
      apt:
        update_cache: yes 
        name: 
          - mysql-server
          - python3-pip
          - apache2
          - app
          - add
        state: latest
      name: "Install mysql and pip"

   - name: finding uptime
     shell: uptime
     register: up_time
   - debug: 
       var: up_time.stdout_lines
   - name: finding RAM info
     shell: free -m
     register: ram_info
   - debug:
       var: ram_info.stdout_lines
       
